@model ExamenOpdracht.Models.Bestelling

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<div>
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="BestellingNaam" class="control-label"></label>
            <input asp-for="BestellingNaam" class="form-control" />
            <span asp-validation-for="BestellingNaam" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Datum" class="control-label"></label>
            <input asp-for="Datum" type="date" class="form-control" />
            <span asp-validation-for="Datum" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Aantal" class="control-label"></label>
            <input asp-for="Aantal" type="number" class="form-control" />
            <span asp-validation-for="Aantal" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProductId" class="control-label"></label>
            <select asp-for="ProductId" asp-items="@ViewBag.Products" class="form-control">
                <option value="">Selecteer een product</option>
            </select>
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GebruikerId" class="control-label"></label>
            <select asp-for="GebruikerId" asp-items="@ViewBag.Users" class="form-control">
                <option value="">Selecteer een gebruiker</option>
            </select>
            <span asp-validation-for="GebruikerId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
